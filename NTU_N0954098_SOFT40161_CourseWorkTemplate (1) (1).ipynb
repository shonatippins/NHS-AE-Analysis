# 3. HELPER — Convert Plotly → Qt WebEngine
# ---------------------------------------------------------
def plot_to_view(fig):
    html = fig.to_html(include_plotlyjs="cdn")
    view = QWebEngineView()
    view.setHtml(html)
    view.setMinimumHeight(350)
    return view


